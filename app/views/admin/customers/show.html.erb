<div class="container">
<h1><%= @customers.full_name %>さんの会員詳細</h1>
<table class='table'>

    <tr>
      <td>会員ID</td>
      <td><%= @customers.id %></td>
    </tr>

    <tr>
      <td>氏名</td>
      <td><%= @customers.family_name %> <%= @customers.first_name %></td>
    </tr>

    <tr>
      <td>フリガナ</td>
      <td><%= @customers.family_name_kana %> <%= @customers.first_name_kana %></td>
    </tr>

    <tr>
      <td>郵便番号</td>
      <td><%= @customers.postcode %></td>
    </tr>

    <tr>
      <td>住所</td>
      <td><%= @customers.address %></td>
    </tr>

    <tr>
      <td>電話番号</td>
      <td><%= @customers.telephone_number %></td>
    </tr>

    <tr>
      <td>メールアドレス</td>
      <td><%= @customers.email %></td>
    </tr>

    <tr>
      <td>会員ステータス</td>
      <td><% if @customers.is_deleted == false %>
        有効
        <% else %>
        退会
        <% end %></td>
    </tr>
</table>

  <td><%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-info' %></td>
  <td><%= link_to "注文履歴一覧を見る", admin_root_path, class: 'btn btn-secondary' %></td>


</div>
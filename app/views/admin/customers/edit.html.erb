<h1><%= @customers.full_name %>さんの会員情報編集</h1>
<%= form_with model: @customers, url:admin_customer_path(@customers), method: :patch, local: true do |f| %>
<table class='table'>

<th></th>
<th></th>
<th></th>
　<tr>
　 <div class="field">
　 <td>会員ID</td>
　 <td><%= @customers.id %></td>
　</tr>

  <tr>
    <div class="field">
      <td><%= f.label :"氏名" %></td>
      <td><%= f.text_field :family_name, autofocus: true %></td>
      <td><%= f.text_field :first_name, autofocus: true %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"フリガナ" %></td>
      <td><%= f.text_field :family_name_kana, autofocus: true %></td>
      <td><%= f.text_field :first_name_kana, autofocus: true %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"郵便番号" %></td>
      <td><%= f.text_field :postcode, autofocus: true %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"住所" %></td>
      <td><%= f.text_field :address, autofocus: true, size:40 %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"電話番号" %></td>
      <td><%= f.text_field :telephone_number, autofocus: true %></td>
  </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </div>
  </tr>
  <tr>
  <td>
  <div class="form-group">
  <td><%= f.label :会員ステータス %></td>
  <td><%= f.radio_button :is_deleted, :false %>
  <%= f.label :is_deleted, "有効" %><br />
  <%= f.radio_button :is_deleted, :true %>
  <%= f.label :is_deleted, "退会" %><br />
  </td>
 </div>
 </tr>
</table>

  <div class="form-group">
    <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>

<% end %>
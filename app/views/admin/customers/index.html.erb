<h1>会員一覧</h1>
<table class='table'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @costomers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to '@customer.full_name',admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td><%= customer.is_deleted %></td>

</table>


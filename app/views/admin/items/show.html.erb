
<div class='container'>
<h1>商品詳細</h1>
<div class='row'>
<div class='col-md-4'>
 <%= image_tag @items.image, size: '250x150' %>
</div>

<div class='col-md-6'>
<table class="table">
  <tr>
  <td>商品名</td>
  <td><%= @items.name %></td>
  </tr>
  <tr>
  <td>商品説明</td>
  <td><%= @items.introduction%></td>
  </tr>
  <tr>
  <td>ジャンル</td>
  <td><%= @items.genre.name %></td>
  <tr>
  <td>税込価格（税抜価格）</td>
  <td><%= @items.price %>円</td>
  </tr>
  <td>販売ステータス</td>
  <td><% if @items.is_sale_status == true %>
  <p class="text-success">販売中</p>
  <% else %>
  <p class="text-danger">販売停止</p>
  <% end %>
  </td>
  </tr>
</table>
</div>
</div>
</div>
<div class='text-center'>
<%= link_to "編集する", edit_admin_item_path, class: 'btn btn-success' %>
</div>


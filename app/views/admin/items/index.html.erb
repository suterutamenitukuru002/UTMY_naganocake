<h1>商品一覧</h1>
<%= link_to "新規投稿", new_admin_item_path %>
<div class='mx-auto col-md-10'>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>販売ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name,admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><% if item.is_sale_status == true %>
        <p class="text-success">販売中</p>
        <% else %>
        <p class="text-danger">販売停止</p>
        <% end %>
        </td>
    <% end %>
    </tr>
  </tbody>
</table>
</div>
<div class="container">
<div class='mx-auto col-md-7'>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
 <div class="form-group">
    <%= f.label :商品画像 %>
    <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price, class: 'form-control' %>円
  </div>

  <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
  </div>


 <div class="form-group">
  <%= f.label :商品ステータス %>
  <%= f.radio_button :is_sale_status, :true %>
  <%= f.label :is_sale_status, "販売中" %><br />
  <%= f.radio_button :is_sale_status, :false %>
  <%= f.label :is_sale_status, "販売停止中" %><br />
 </div>


  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-info' %>
   </div>
   <% end %>
 </div>
</div>
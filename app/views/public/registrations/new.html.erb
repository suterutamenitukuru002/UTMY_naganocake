<div class = "container">
  <div class = "row">
    <div class = "col-9">

      <div class="d-flex align-items-end" style="height:60px;">
        <h2>Sign up</h2>
      </div>

        <table class = "table">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

        <tr>
          <div class="field">
            <td><%= f.label :"名前（姓）" %></td>
            <td><%= f.text_field :family_name, autofocus: true %></td>

            <td><%= f.label :"（名）" %></td>
            <td><%= f.text_field :first_name, autofocus: true %></td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <td><%= f.label :"フリガナ  （セイ）" %></td>
            <td><%= f.text_field :family_name_kana, autofocus: true %></td>

            <td><%= f.label :"（メイ）" %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true %></td>
          </div>
        </tr>

        <tr>
          <div class="field">
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </div>
        </tr>
    </div>

      <tr>
        <div class="field">
          <td><%= f.label :"郵便番号 （ハイフンなし）" %></td>
          <td><%= f.text_field :postcode, autofocus: true %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :"住所" %></td>
          <td><%= f.text_field :address, autofocus: true ,size:30 %></td>
        </div>
      </tr>

      <tr>
        <div class="field">
          <td><%= f.label :"電話番号 (ハイフンなし)" %></td>
          <td><%= f.text_field :telephone_number, autofocus: true %></td>
        </div>
      </tr>
  </div>
</table>
  <table class ="table">
    <div class ="row">
      <div class = "col-6">
        <tr>
          <div class="field">
            <td><%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em></td>
            <% end %><br />
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </div>
        </tr>
          <tr>
            <div class="field">
              <td><%= f.label :password_confirmation %></td><br />
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </div>
          </tr>
          <tr>
            <td><%= render "public/shared/links" %></td>
            <div class="actions">
              <td><%= f.submit "Sign up",class: 'btn btn-success' %></td>
            </div>
          <% end %>
          </tr>
        </table>
      </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <ul>
        <li><strong>ジャンル検索</strong></li>
        <li><%= link_to 'ケーキ' %></li>
        <li><%= link_to '焼き菓子' %></li>
        <li><%= link_to 'プリン' %></li>
        <li><%= link_to 'キャンディ' %></li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-7">
          <div>
            <%= image_tag @item.image, size:'500x400', fallback: 'no_image.jpg', size:'500x400' %>
          </div>
        </div>

        <div class="col-md-5">
          <div>
            <h2><%= @item.name %></h2><br>
            <p><%= @item.introduction %></p>
            <h3>¥<%= (@item.price*1.1).floor.to_s(:delimited) %><span>（税込）</span></h3>

            <% if customer_signed_in? %>
              <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.number_field :amount , placeholder: "個数選択", min: 1, max: 30 %>

                <%= f.submit 'カートに入れる', class: "btn-sm btn-primary" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

    <%= link_to 'カートに入れる', public_cart_items_index_path %>

  </div>
</div>

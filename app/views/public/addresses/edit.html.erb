<div class ="container">
  <div class ="row">
    <div class ="col-5">
      <div class="d-flex align-items-end" style="height:50px;">
        <h4><b>配送先編集</b></h4>
      </div>

<%= form_with model:@address, url:address_path, local:true do |f| %>
<table class "table table-bordered">
  <tr>
    <div class="field">
      <td><%= f.label :"郵便番号" %></td>
      <td><%= f.text_field :postcode, autofocus: true %></td>
    </div>
  </tr>

  <tr>
    <div class="field">
      <td><%= f.label :"住 所" %></td>
      <td><%= f.text_field :address, autofocus: true , size:40%></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"宛 名" %></td>
      <td><%= f.text_field :name, autofocus: true %></td>
    </div>
  </tr>
  <tr>
</table>
</div>
  <div class ="col-7">
    <div class="d-flex align-items-end" style="height:170px;">
    <div class="form-group">
      <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
    </div>
    </div>
<% end %>

</div>
  </div>
</div>
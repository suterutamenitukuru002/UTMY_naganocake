<div class="container">
    <div class "row">
      <div class "col-6">
        <p id="notice"><%= notice %></p>
<h4><b>配送先登録/一覧</b></h4>

    <%= form_with model: @address, url:addresses_path, method: :post do |f| %>

      <div class="field">
        <%= f.label :"郵便番号 （ハイフンなし）" %>
        <%= f.text_field :postcode, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"住所" %>
        <%= f.text_field :address, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"宛名" %>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
</div>


<div class = "col-6">
  <table class='table table-bordered'>

      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>

    <% @addresses.each do |ad| %>

      <tr>
        <td><%= ad.postcode %></td>
        <td><%= ad.address %></td>
        <td><%= ad.name %></td>
        <td><%= link_to "編集する", edit_address_path(ad.id), class: 'btn btn-success' %></td>
        <td><%= link_to "削除", address_path(ad.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
      </tr>
      <% end %>
  </table>
  </div>
  </div>
</div>
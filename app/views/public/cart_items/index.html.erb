<div class="container">
<h2>ショッピングカート</h2>
  <div class="row">
    <div>
      <%= link_to cart_items_path, method: :delete do %>
        <button class="btn btn-outline-danger">カートを空にする</button>
      <% end %>
  　</div>
  　<br>
  　<table class="table">
  　    <thead>
  　        <th>商品名</th>
  　        <th>単価（税込）</th>
  　        <th>数量</th>
  　        <th>小計</th>
  　        <th></th>
  　    </thead>
  　    <% @cart_items.each do |cart_item| %>
  　     <tr>
  　      <td>
  　        <%= image_tag cart_item.item.image, format:'jpeg', fallback:"no_image.jpg", size:"50x50" %>
  　        <%= cart_item.item.name %>
  　      </td>
  　      <td>
  　        ¥<%= (cart_item.item.price*1.1 ).floor.to_s(:delimited) %>
  　      </td>
  　      <td>
  　        <%= form_with model: cart_item, url: cart_item_path(item), local: true do |f| %>
              <%= f.hidden_field :id, :value => cart_item.id %>
              <%= f.number_field :amount, size: 1, min: 1 %>　<%= f.submit "変更" %>
            <% end %>
  　      </td>
  　      <td>¥<%= cart_item.sub_total.to_s(:delimited) %><</td>
  　      <td>
  　        <%= link_to cart_item_path(cart_item), method: :delete do %>
             <button class="btn btn-danger">削除</button>
           <% end %>
         </td>
  　     </tr>
  　    <% end %>
    </table>
  </div>

  <div class="row">
    <div class="col-xs-4">
      <%= link_to root_path do %>
        <button class="btn btn-primary">買い物を続ける</button>
      <% end %>
    </div>
    <div class="col-xs-4"></div>
    <div class="col-xs-4">
      <table class="table">
        <tr>
          <th class="active">合計金額</th>
          <td>¥<%#= @total_price.to_s(:delimited)  %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="text-center">
  <%# if current_customer.cart_items.any? %>
    <%#= link_to new_order_path do %>
      <button class="btn btn-lg btn-success">情報入力に進む</button>
    <%# end %>
  <%# end %>
  </div>

<div class="container">
<div class="d-flex align-items-end" style="height:50px;">
<h4><b>会員情報編集</b></h4>
</div>
<div class = "row">
<div class = "col-8">
<%= form_with model: @customer,url:public_customers_infomation_path, local:true do |f| %>

<table class='table'>

  <tr>
    <div class="field">
      <td><%= f.label :"氏名" %></td>
      <td><%= f.text_field :family_name, autofocus: true %></td>
      <td><%= f.text_field :first_name, autofocus: true %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"フリガナ" %></td>
      <td><%= f.text_field :family_name_kana, autofocus: true %></td>
      <td><%= f.text_field :first_name_kana, autofocus: true %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"郵便番号" %></td>
      <td><%= f.text_field :postcode, autofocus: true %></td>
      <td></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"住所" %></td>
      <td><%= f.text_field :address, autofocus: true, size:40 %></td>
      <td></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"電話番号" %></td>
      <td><%= f.text_field :telephone_number, autofocus: true %></td>
      <td></td>
  </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :"メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      <td></td>
    </div>
  </tr>
</table>
</div>

      <div class = "col-4">
        <div class="d-flex align-items-end" style="height:300px;">
          <div class="form-group">
            <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
          </div>
        </div>
          <div class="d-flex align-items-end">
             <%= link_to "退会する", public_customers_check_path, class: "btn btn-danger ms-3" %>
           </div>
<% end %>
      </div>
    </div>
  <%= image_tag 'line_sweets.png',size:'10,30' %>
</div>

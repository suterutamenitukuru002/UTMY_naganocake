<h3>注文情報入力</h3>
  <%= form_with model: @order, url: public_orders_check_path, method: :post do |f| %>
    <div>
      <h4><b>支払方法</b></h4>
      <%= f.radio_button :payment_method, "クレジットカード", checked: true %>
      <%= f.label :payment_method, "クレジットカード" %>
      <br>
      <%= f.radio_button :payment_method, "銀行振込", checked: true %>
      <%= f.label :payment_method, "銀行振込" %>

        <h4><b>お届け先</b></h4>
          <%= f.radio_button :addresses, "member_address", checked: true %>
          <%= f.label :addresses, "ご自身の住所" %>
          <br>
          〒<%= current_customer.postcode + "　" + current_customer.address + "　" + current_customer.family_name + current_customer.first_name %>

          <h4><b>登録済住所からの選択</b></h4>
            <%= f.radio_button :addresses, "登録済住所", checked: true %>
            <%= f.label :addresses, "登録済住所" %>
            <%= f.select :addresses_id, current_customer.addresses.all.map { |m| [[m.postcode, m.address, m.name].join(" "), m.id] }  %>
            <br>
            <%= f.radio_button :address_type, "new_address" %>
            <%= f.label :address_type, "新しいお届け先" %>

            <br>

          <table class = table >
            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td><%= f.text_field :postcode %></td>
            </tr>
              <tr>
                <td>住所</td>
                <td><%= f.text_field :address %></td>
              </tr>
                <tr>
                  <td>宛名</td>
                  <td><%= f.text_field :name %></td>
                </tr>
            </table>
            <br>
            <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
<% end %>


<div class = "container">

  <div class="d-flex align-items-end" style="height:50px;">
    <h3>注文履歴詳細</h3>
  </div>
  <div class = "row">
<div class = "col-lg-6">
    <h4><b>注文情報</b></h4>
      <table class = "table">
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>配送先</td>
            <td>〒<%= @address %></td><br>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
</div>

<div class = "col-lg-6">
        <h4><b>請求情報</b></h4>

          <table class = "table">
            <tr>
              <td>商品合計</td>
              <td><%=(@order.billing_amount - @order.postage).to_s(:delimited) %></td>
            </tr>
            <tr>
              <td>配送料</td>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <td><b>ご請求金額</b></td>
              <td><%= (@order.billing_amount).to_s(:delimited) %></td>
            </tr>
          </table>

            <h4><b>注文内容</b></h4>

        <table class = "table">
          <tr>
            <td>商品</td>
            <td>単価(税込)</td>
            <td>個数</td>
            <td>小計</td>
          </tr>

      <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= (order_detail.price *  order_detail.quantity).to_s(:delimited) %></td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>